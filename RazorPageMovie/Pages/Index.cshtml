@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var Username = "Ali";
    var year =2021;
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h4>My username is : @Username</h4>
    <h4>Current date is : @DateTime.Now</h4>
    <h5>@year is a leap year : @DateTime.IsLeapYear(@year)</h5>
    <h5> Last week this time : @(DateTime.Now - TimeSpan.FromDays(14))</h5>

</div>

@{
    year= 2000;
}

<p>The new value of the year : @year</p>